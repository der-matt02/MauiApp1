<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.StackLayoutPage"
             Title="StackLayoutPage">
    <StackLayout VerticalOptions="Center">
        <Label Text="Small Text" FontSize="Small" />
        <Label Text="Medium Text" FontSize="Medium" />
        <Label Text="Large Text" FontSize="Large" />
        <Button Text="Go to FlexLayout Page" Clicked="OnFlexLayoutPageButtonClicked"/>
    </StackLayout>
</ContentPage>